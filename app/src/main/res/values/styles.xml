<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@drawable/gradient_background</item>

        <!-- Habilita a action bar -->
        <item name="windowActionBar">true</item>
    </style>

    <!-- Estilo para a menu_bar -->
    <style name="MenuBarTheme" parent="AppTheme">
        <!-- Personalizações para a menu_bar -->
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>